X/* %I prints a struct in_addr* in dotted quad form */
X
Xint print_inaddr_conv(Format *format, int c) 
X{
X    struct in_addr* in;
X
X    in = va_arg (format->args, struct in_addr*);
X    if (in)
X	fmtcat (format, inet_ntoa (*in));
X    else
X	fmtcat (format, "0.0.0.0");
