  $shar_touch -am 0512222696 'Red/red-manual/function-alpha.html' &&
  chmod 0640 'Red/red-manual/function-alpha.html' ||
  echo 'restore of Red/red-manual/function-alpha.html failed'
  shar_count="`wc -c < 'Red/red-manual/function-alpha.html'`"
  test 6999 -eq "$shar_count" ||
    echo "Red/red-manual/function-alpha.html: original size 6999, current size $shar_count"
  rm -f _sharnew.tmp
