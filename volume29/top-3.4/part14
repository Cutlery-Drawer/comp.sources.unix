Xstatic struct nlist nlst[] = {
X    { "_avenrun" },		/* 0 */
X    { "_ccpu" },		/* 1 */
X    { "_nproc" },		/* 2 */
X    { "_proc" },		/* 3 */
X    { "_total" },		/* 4 */
X    { "_cpudata" },		/* 5 */
X    { "_mpid" },		/* 6 */
X    { "_hz" },			/* 7 */
X    { "_lowcpu" },		/* 8 */
X    { "_highcpu" },		/* 9 */
X    { 0 }
