    echo shar: \"'top-3.4/machine/m_convex.c'\" unpacked with wrong size!
fi
# end of 'top-3.4/machine/m_convex.c'
fi
if test -f 'top-3.4/machine/m_svr42.c' -a "${1}" != "-c" ; then 
