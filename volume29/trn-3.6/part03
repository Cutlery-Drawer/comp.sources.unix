Xuuname='$uuname'
Xvi='$vi'
Xvspell='$vspell'
Xwho='$who'
Xhint='$hint'
Xmyuname='$myuname'
Xsrcdir='$srcdir'
Xvincludes='$vincludes'
Xvpath='$vpath'
XId='$Id'
XLog='$Log'
Xactive='$active'
Xacttimes='$acttimes'
Xd_acttimes='$d_acttimes'
