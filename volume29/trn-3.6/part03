X
X: add special variables
X$test -f $srcdir/patchlevel.h && \
Xawk '/^#define/ {printf "%s=%s%s %s %s %s\n",$2,$3,$4,$5,$6,$7}' $srcdir/patchlevel.h >>config.sh
Xecho "CONFIG=true" >>config.sh
X
X: Finish up by extracting the .SH files
SHAR_EOF
  : || echo 'restore of trn-3.6/Configure failed'
fi
echo 'End of archive part 3'
echo 'File trn-3.6/Configure is continued in part 4'
echo 4 > _sharseq.tmp
exit 0
