XPRIVATE int nhosts;				/* Number of hosts (/w hw or IP address) */
XPRIVATE int nentries;			/* Total number of entries */
XPRIVATE int32 modtime = 0;		/* Last modification time of bootptab */
XPRIVATE char *current_hostname;	/* Name of the current entry. */
XPRIVATE char current_tagname[8];
