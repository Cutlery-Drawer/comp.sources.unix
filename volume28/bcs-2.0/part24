#!/bin/sh
X
if [ -x /bin/mach ]; then
X   mach=`/bin/mach`;
elif [ -x /usr/ucb/mach ]; then
X   mach=`/usr/ucb/mach`
elif [ -x /bin/uname ]; then
X   mach=`/bin/uname -s`   
else
X   mach=unknown
fi
X
archtype=$mach
if [ $mach = sparc ]; then
X   rel=`uname -r | cut -c1`
X   if [ $rel = 5 ]; then
X      archtype=${mach}_sol2
X   else
X      archtype=${mach}
X   fi
fi
X
echo $archtype
SHAR_EOF
