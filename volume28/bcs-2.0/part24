# ============= bcs-2.0/unsupported/sample-baseline/tools/gen_deps ==============
if test -f 'bcs-2.0/unsupported/sample-baseline/tools/gen_deps' -a X"$1" != X"-c"; then
	echo 'x - skipping bcs-2.0/unsupported/sample-baseline/tools/gen_deps (File already exists)'
	rm -f _shar_wnt_.tmp
else
> _shar_wnt_.tmp
echo 'x - extracting bcs-2.0/unsupported/sample-baseline/tools/gen_deps (Text)'
sed 's/^X//' << 'SHAR_EOF' > 'bcs-2.0/unsupported/sample-baseline/tools/gen_deps' &&
#!/usr/local/bin/perl -w-- -*- perl -*-
#
# $Id: gen_deps,v 1.1 1993/10/27 17:07:11 qjb Exp $
# $Source: /home/qjb/source/bcs/src/unsupported/sample-baseline/tools/RCS/gen_deps,v $
# $Author: qjb $
#
X
{
X    local(@whoami) = split('/', $0);
X    $whoami = pop(@whoami);
};
X
&usage if (scalar(@ARGV) != 3);
X
defined($arch = $ENV{"ARCH"}) || die "\$ARCH must be defined.\n";
X
($compiler, $target, $src) = (@ARGV);
$is_library = ($target =~ m/\.a$/);
$srcbase = $src;
$srcbase =~ s/\.[^\.]*$//;
$dep = "$arch/$srcbase.d";
$obj = ($is_library) ? "$arch/$target($arch/$srcbase.o)" : "$arch/$srcbase.o";
X
unlink($dep);
X
open(COMPILE, "$compiler $src 2>$dep.tmp2 |") || die "Can't run $compiler\n";
open(TMP1, ">$dep.tmp1") || die "Can't open $dep.tmp1\n";
X
while (<COMPILE>)
{
X    s/^$srcbase\.o/$obj/g;
X    print TMP1;
}
X      
close(TMP1);
close(COMPILE);
X
if (-s "$dep.tmp2")
{
X    unlink("$dep.tmp1");
X    system("cat $dep.tmp2 1>&2");
}
else
{
X    rename("$dep.tmp1", $dep);
X    chmod(0664, $dep);
}
unlink("$dep.tmp2");
X
exit((-f $dep) ? 0 : 1);
X
X
sub usage {
X    print STDERR "Usage: $whoami compile target src\n";
X    print STDERR "  Generate dependencies for src\n";
X    exit 1;
}
