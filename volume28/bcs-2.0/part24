@#!/bin/sh
X
if [ -x /bin/mach ]; then
X   mach=`/bin/mach`;
elif [ -x /usr/ucb/mach ]; then
X   mach=`/usr/ucb/mach`
elif [ -x /bin/uname ]; then
X   mach=`/bin/uname -s`   
else
X   mach=unknown
fi
X
archtype=$mach
if [ $mach = sparc ]; then
X   rel=`uname -r | cut -c1`
X   if [ $rel = 5 ]; then
X      archtype=${mach}_sol2
X   else
X      archtype=${mach}
X   fi
fi
X
echo $archtype
@
SHAR_EOF
chmod 0555 bcs-2.0/unsupported/sample-baseline/tools/RCS/archtype,v ||
echo 'restore of bcs-2.0/unsupported/sample-baseline/tools/RCS/archtype,v failed'
Wc_c="`wc -c < 'bcs-2.0/unsupported/sample-baseline/tools/RCS/archtype,v'`"
test 548 -eq "$Wc_c" ||
	echo 'bcs-2.0/unsupported/sample-baseline/tools/RCS/archtype,v: original size 548, current size' "$Wc_c"
rm -f _shar_wnt_.tmp
fi
# ============= bcs-2.0/unsupported/sample-baseline/tools/RCS/gen_deps,v ==============
if test -f 'bcs-2.0/unsupported/sample-baseline/tools/RCS/gen_deps,v' -a X"$1" != X"-c"; then
