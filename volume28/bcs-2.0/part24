text
@#!/usr/local/bin/perl -w-- -*- perl -*-
#
# $Id: installsw,v 1.1 1994/01/09 22:19:53 qjb Exp ejb $
# $Source: /home/ejb/source/bcs/src/unsupported/sample-baseline/tools/RCS/installsw,v $
# $Author: qjb $
#
X
{
X    local(@@whoami) = split('/', $0);
X    $whoami = pop(@@whoami);
};
X
@@valid_categories = ("bin", "lib", "inc");
X
defined($arch = $ENV{"ARCH"}) || die "\$ARCH must be defined.\n";
defined($ranlib = $ENV{"RANLIB"}) || die "\$RANLIB must be defined.\n";
defined($projtop = $ENV{"TOP"}) || die "\$TOP must be defined.\n";
defined($in_staging = $ENV{"IN_STAGING"}) || 
X    die "\$IN_STAGING must be defined.\n";
X
&usage if (scalar(@@ARGV) < 1);
$category = shift(@@ARGV);
@@srcs = (@@ARGV);
X
Xexit 0 if (scalar(@@srcs) == 0);
X
$found = 0;
for (@@valid_categories)
{
X    ($found = 1) if ($category eq $_);
}
X
&usage if (! $found);
X
($category eq "bin") && ($destdir = "$projtop/bin/$arch");
($category eq "lib") && ($destdir = "$projtop/lib/$arch");
($category eq "inc") && ($destdir = "$projtop/include");
X
system("stage $destdir") if ($in_staging);
X
foreach $src (@@srcs)
{
X    @@comps = split('/', $src);
X    $lastcomp = pop(@@comps);
X    $target = "$destdir/$lastcomp";
X
X    if ($category eq "inc")
X    {
X	$do_update = &different($src, $target);
X    }
X    else
X    {
X	$do_update = &newer($src, $target);
X    }
X
X    if ($do_update)
X    {
X	if (! -d $destdir)
X	{
X	    &mkdirp($destdir);
X	    if (! $in_staging)
X	    {
X		open(EMPTY, ">$destdir/.important");
X		print EMPTY "*\n";
X		close(EMPTY);
X	    }
X	}
X	&run("rm -f $target");
X	switch :
X	{
X	    ($category eq "bin") && do { &install_bin; last switch; };
X	    ($category eq "lib") && do { &install_lib; last switch; };
X	    ($category eq "inc") && do { &install_inc; last switch; };
X	}
X    }
}
X
sub install_bin {
X    &run("install -s -c -m 775 $src $destdir");
}
X
X
sub install_lib {
X    &run("install -c -m 664 $src $destdir");
X    # Run a full ranlib at installation since we don't run it when
X    # we construct the library.
X    &run("$ranlib $target");
}
X
sub install_inc {
X    &run("install -c -m 444 $src $destdir");
}
X
sub run {
X    local ($cmd) = @@_;
X    print $cmd, "\n";
X    system($cmd);
}
X
sub newer {
X    local($f1, $f2) = @@_;
X
X    &mtime($f1) >= &mtime($f2);
}
X
sub different {
X    local($f1, $f2) = @@_;
X
X    # Don't use diff -s since some systems don't support it.
X    (system("diff $f1 $f2 > /dev/null 2>&1") != 0);
}
X
sub mtime {
X    local($f) = @@_;
X    local($t);
X    (defined($t = (stat($f))[9])) ? $t : 0;
}
X
sub mkdirp {
X    local($dir) = (@@_);
X    local($sofar, @@components);
X    local($failed);
X    
X    $sofar = "";
X    @@components = split('/', $dir);
X    shift(@@components);
X    while (@@components)
X    {
X	$sofar .= "/" . shift(@@components);
X	$failed = 0;
X	mkdir($sofar, 0777) || ($failed = 1);
X    }
X    
X    # We only care if the last one failed
X    ($failed && (! -d $sofar)) &&
X	die "$whoami: can't make directory $dir: $!\n";
}
X
sub usage {
X    print STDERR "Usage: $whoami category file ...\n";
X    print STDERR "Valid categories are\n";
X    for (@@valid_categories)
X    {
X	print STDERR "   $_\n";
X    }
X    print STDERR "Installs files in manner appropriate to category.\n";
X    exit 1;
}
@
X
X
