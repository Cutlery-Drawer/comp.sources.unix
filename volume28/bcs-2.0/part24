@#!/bin/sh
#
# $Id: recursive_make,v 1.1 1993/07/02 17:44:01 qjb Exp ejb $
# $Source: /home/ejb/source/bcs/src/unsupported/sample-baseline/tools/RCS/recursive_make,v $
# $Author: qjb $
#
# This script is designed to be run only from make.  It is not
# designed for direct execution.  It is called by recursive
# makefiles.
#
# This script assumes that it is being used with GNU make.
#
X
usage() {
X   echo "Usage: $whoami MAKE MFLAGS RECTARGET dir ..." 1>&2
X   exit 1
}
X
whoami=`basename $0`
X
if [ $# -lt 3 ]; then
X   usage
fi
X
MAKE="$1"
MFLAGS="$2"
RECTARGET="$3"
shift 3
DIRS="$*"
X
if [ -z "$DIRS" ]; then
X   exit 0
fi
X
for i in $DIRS; do
X   if islink $i; then
X      echo "$whoami: $i is a link; skipping"
X   else
X      ${MAKE} ${MFLAGS} -C $i ${RECTARGET}
X   fi
X   if [ ! $? -eq 0 ]; then
X      exit 1
X   fi
done
X
Xexit 0
@
X
X
