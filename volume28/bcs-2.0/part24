@#!/usr/local/bin/perl -w-- -*- perl -*-
#
# $Id: unstage_unit,v 1.2 1993/08/24 16:47:26 ejb Exp $
# $Source: /projects/sasp/tools/bin/RCS/unstage_unit,v $
# $Author: ejb $
#
# This script unstages a unit directory.  It has specific
# knowledge about the way this baseline is configured and
# about the way the makefile system works.
#
X
{
X    local(@@whoami) = split('/', $0);
X    $whoami = pop(@@whoami);
};
X
(scalar(@@ARGV) < 1) && &usage;
X
@@dirs = ();
for (@@ARGV)
{
X    m/^-/ || push(@@dirs, $_);
}
X
$error = 0;
X
for (@@dirs)
{
X    if ($_ eq ".")
X    {
X	$error = 1;
X	print STDERR "$whoami: `.' is an invalid argument.\n";
X    }
X    elsif (-l $_)
X    {
X	$error = 1;
X	print STDERR "$whoami: $_ must be a directory, not a link.\n";
X    }
X    elsif (! -d $_)
X    {
X	$error = 1;
X	print STDERR "$whoami: $_ is not a directory.\n";
X    }
X    elsif (! -r "$_/Makefile")
X    {
X	$error = 1;
X	print STDERR "$whoami: $_/Makefile does not exist.\n";
X    }
X    else
X    {
X	if (`grep -c TARGET "$_/Makefile"` == 0)
X	{
X	    $error = 1;
X	    print STDERR "$whoami: $_/Makefile does not define TARGET.\n";
X	}
X    }
}
X
$error && &usage;
X    
for (@@dirs)
{
X    system("gmake -C $_ uninstall NODEP=1");
}
X
system("unstage " . join(' ', @@dirs));
@@instdirs = `csh -fc \"ls -1d \$STAGING/*/{lib,include,bin}\"`;
@@dirs = ();
for (@@instdirs)
{
X    chop;
X    if ((! -l $_) && (-d $_) && (`(cd $_; in_staging_area)` eq "1\n"))
X    {
X	push(@@dirs, $_);
X    }
}
system("sync_staging -r " . join(' ', @@dirs));
X
sub usage {
X    print STDERR "Usage: $whoami dir [ dir ... ]\n";
X    print STDERR
X	"  Each dir should be a directory with a library/program Makefile\n";
X    exit 1;
}
@
SHAR_EOF
chmod 0555 bcs-2.0/unsupported/sample-baseline/tools/RCS/unstage_unit,v ||
