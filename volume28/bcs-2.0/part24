@d1 5
a5 1
#!/bin/sh
d10 2
a11 1
# it's test -h on a sun but test -l on SGI.)
d14 10
a23 4
if [ $# -ne 1 ]; then
X   echo "Usage: `baseline $0` file"
X   exit 1
fi
d25 2
a26 6
modes=`ls -ld $1 | awk '{print substr($0, 1, 1)}'`
if [ "$modes" = "l" ]; then
X   exit 0
else
X   exit 1
fi
@
SHAR_EOF
