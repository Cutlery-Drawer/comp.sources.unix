@#include <stdio.h>
#include <string.h>
#include <stdlib.h>
#include "util.h"
X
int main(int argc, char *argv[])
{
X    int n;
X    int result;
X    char *whoami;
X
X    if ((whoami = strrchr(argv[0], '/')) == NULL)
X	whoami = argv[0];
X    else
X	whoami++;
X
X    if (argc != 2)
X    {
X	fprintf(stderr, "Usage: %s n\n", whoami);
X	exit(1);
X    }
X
X    n = atoi(argv[1]);
X    result = util(n);
X    printf("util(%d) returned %d.\n", n, result);
X    return 0;
}
@
