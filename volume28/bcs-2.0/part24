Wc_c="`wc -c < 'bcs-2.0/unsupported/sample-baseline/tools/RCS/unstage_unit,v'`"
test 1831 -eq "$Wc_c" ||
	echo 'bcs-2.0/unsupported/sample-baseline/tools/RCS/unstage_unit,v: original size 1831, current size' "$Wc_c"
rm -f _shar_wnt_.tmp
fi
# ============= bcs-2.0/unsupported/sample-baseline/tools/archtype ==============
