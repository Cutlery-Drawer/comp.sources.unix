X/* Initialization Routines. */
X
void InitBinds()
X{
X	struct cmd *c;
X	data_obj **p;
X	int i;
X	
X	p = mainmap;
X	for(i= 0; i < NCHARS; i++) {
X		c = (struct cmd *) *p;
X		c->c_map = F_MAINMAP;
X		c->c_key = i;
X		p++;
X	}
X	
X	p = pref1map;
X	for(i= 0; i < NCHARS; i++) {
X		c = (struct cmd *) *p;
X		c->c_map = F_PREF1MAP;
X		c->c_key = i;
X		p++;
X	}
X	p = pref2map;
X	for(i= 0; i < NCHARS; i++) {
X		c = (struct cmd *) *p;
X		c->c_map = F_PREF2MAP;
X		c->c_key = i;
X		p++;
X	}
X	
X}
