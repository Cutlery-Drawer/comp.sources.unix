Xifdef({TCPMAILER},,{define(TCPMAILER, TCP)})
Xifdef({UUCPMAILER},,{define(UUCPMAILER, UUCP)})
Xifdef({UUCPPRECEDENCE},
X	{errprint({Note: UUCPPRECEDENCE is obsolete, please see Sendmail.mc})})
X
